/* CSS Styles for Student Grades Table */

/* Sets the font and margin for the entire body of the webpage */
body {
  font-family: 'sans-serif'; /* Specifies the font family for the text */
  margin: 20px; /* Sets the margin around the body */
}

/* Styles for the table */
table {
  width: 100%; /* Sets the width of the table to 100% of its parent container */
  border-collapse: collapse; /* Collapses the borders of the table cells into a single border */
  margin-bottom: 20px; /* Sets the bottom margin of the table */
}

/* Styles for the table headers (th) and table data cells (td) */
th, td {
  border: 1px solid #ddd; /* Sets the border of the cells */
  padding: 8px; /* Sets the padding inside the cells */
  text-align: center; /* Centers the text in the cells */
}

/* Styles for the table headers (th) */
th {
  background-color: #333; /* Sets the background color of the headers */
  color: #fff; /* Sets the text color of the headers */
}

/* Styles for even numbered rows of the table */
tr:nth-child(even) {
  background-color: #f2f2f2; /* Sets the background color of even rows */
  color: #000; /* Sets the text color of even rows */
}

/* Styles for odd numbered rows of the table */
tr:nth-child(odd) {
  background-color: #fff; /* Sets the background color of odd rows */
  color: #000; /* Sets the text color of odd rows */
}

/* Styles for cells with class 'left-align' */
.left-align {
  text-align: left; /* Aligns the text to the left */
}

/* Styles for cells with class 'center-align' */
.center-align {
  text-align: center; /* Centers the text */
}

/* Styles for cells with class 'editable' */
.editable {
  cursor: pointer; /* Changes the cursor to a pointer when hovering over the cell */
}

/* Styles for editable cells with class 'right-align' */
.editable.right-align {
  text-align: right; /* Aligns the text to the right */
}

/* Styles for the div with id 'assignment-count' */
.assignment-count {
  font-weight: bold; /* Makes the text bold */
  margin-top: 10px; /* Sets the top margin of the div */
}

/* Styles for buttons with class 'styled-button' */
.styled-button {
  display: inline-block; /* Makes the button inline and block-level */
  padding: 10px 20px; /* Sets the padding around the text */
  background-color: #007bff; /* Sets the background color of the button */
  color: #fff; /* Sets the text color of the button */
  border: none; /* Removes the border of the button */
  border-radius: 5px; /* Rounds the corners of the button */
  cursor: pointer; /* Changes the cursor to a pointer when hovering over the button */
  margin-right: 10px; /* Sets the right margin of the button */
}

/* Styles for buttons with class 'styled-button' when hovered over */
.styled-button:hover {
  background-color: #0056b3; /* Changes the background color of the button when hovered over */
}
